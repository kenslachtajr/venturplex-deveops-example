{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@venturplex/core-data": ["libs/core-data/src/index.ts"],
      "@venturplex/core-state": ["libs/core-state/src/index.ts"],
      "@venturplex/material": ["libs/material/src/index.ts"],
      "@venturplex/ui-login": ["libs/ui-login/src/index.ts"],
      "@venturplex/ui-toolbar": ["libs/ui-toolbar/src/index.ts"]
    },
    "rootDir": "."
  },
  "exclude": ["node_modules", "tmp"]
}
